<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="model.Produkt" table="Produkt">

		<meta attribute="class-description">
			Die Klasse beinhaltet Produktdetails.
		</meta>

		<id name="produkt_id" column="produkt_id" type="int" />

		<property name="name" column="NAME" type="string" />
		<property name="preis" column="PREIS" type="double" />
		<property name="menge_enthalten" column="MENGE_ENTHALTEN"
			type="int" />
		<property name="hersteller" column="HERSTELLER" type="string" />
		<property name="wirkstoff" column="WIRKSTOFF" type="string" />
		<property name="wirkungsweise" column="WIRKUNGSWEISE"
			type="string" />
		<property name="anwendungsweise" column="ANWENDUNGSWEISE"
			type="string" />
		<property name="anmerkung" column="ANMERKUNG" type="string" />
		<property name="ersteller_id" column="ERSTELLER_ID"
			type="int" />
		<property name="produktgruppe_id" column="PRODUKTGRUPPE_ID"
			type="int" />
	</class>
</hibernate-mapping>